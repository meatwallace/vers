{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "types": ["node", "vite/client", "vitest"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "../../schema.graphql"
      }
    ]
  },
  "exclude": ["app/**/*.test.ts", "app/**/*.test.tsx"],
  "include": ["app/**/*.ts", "app/**/*.tsx"]
}
