{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "vite/client"],
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "../../schema.graphql"
      }
    ]
  },
  "files": [],
  "include": [
    ".react-router/types/**/*",
    "app/**/*.ts",
    "app/**/*.tsx",
    "mocks/**/*.ts",
    "server/**/*.ts",
    "server/**/*.tsx"
  ],
  "exclude": [
    "app/**/*.test.ts",
    "app/**/*.test.tsx",
    "server/**/*.test.ts",
    "server/**/*.test.tsx"
  ]
}
