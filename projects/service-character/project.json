{
  "name": "service-character",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "projects/service-character/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "projects/service-character/dist",
        "format": ["esm"],
        "bundle": true,
        "main": "projects/service-character/src/main.ts",
        "tsConfig": "projects/service-character/tsconfig.app.json",
        "assets": ["projects/service-character/src/assets"],
        "generatePackageJson": true,
        "external": ["pino-pretty", "pino-sentry-transport", "@sentry/node"],
        "esbuildConfig": "projects/service-character/esbuild.config.cjs"
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "service-character:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "service-character:build:development"
        },
        "production": {
          "buildTarget": "service-character:build:production"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "flyctl deploy --local-only --dockerfile projects/service-character/Dockerfile --config projects/service-character/fly.toml --build-arg SENTRY_AUTH_TOKEN=$SENTRY_AUTH_TOKEN"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "tsc -p tsconfig.json --noEmit",
            "forwardAllArgs": false
          }
        ],
        "cwd": "projects/service-character"
      }
    }
  }
}
